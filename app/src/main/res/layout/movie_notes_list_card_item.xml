<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="280dp"
    android:layout_gravity="top"
    android:layout_margin="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="280dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/note_movie_image"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/note_movie_title"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="@dimen/layout_margin_start"
            android:textSize="@dimen/movie_title"
            android:textStyle="bold"
            tools:text="@tools:sample/cities" />


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_film_release"
                android:layout_width="82dp"
                android:layout_height="30dp"
                android:layout_marginStart="@dimen/layout_margin_start"
                android:gravity="start|center"
                android:textSize="@dimen/movie_year"
                tools:text="@tools:sample/cities" />

            <ImageView
                android:id="@+id/note_star_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/note_film_score"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="@dimen/movie_title"
                tools:text="8.5" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>